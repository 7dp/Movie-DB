<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?android:actionBarSize"
        app:tabIndicatorColor="@android:color/white"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="@color/whiteAlpha2"
        app:tabUnboundedRipple="true"
        app:tabTextAppearance="@style/NavigationTabTextAppearance">

        <android.support.design.widget.TabItem
            android:id="@+id/tab_item_popular"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:icon="@drawable/ic_whatshot_black_24dp"
            android:text="Popular" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab_item_rated"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:icon="@drawable/ic_star_black_24dp"
            android:text="Top rated" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab_item_favorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:icon="@drawable/ic_favorite_black_24dp"
            android:text="favorite" />

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>